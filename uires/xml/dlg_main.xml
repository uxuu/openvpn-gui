<SOUI name="mainWindow" title="@string/title" bigIcon="ICON_LOGO:32" smallIcon="ICON_LOGO:16" width="300" height="600" resizable="0" wndType="appMain" appWnd="1" translucent="1">
    <root skin="" cache="1">
        <window pos="5dp,5dp,-5dp,-5dp" alpha="255" cache="0">
             <caption  colorBkgnd="#cdcccc">
                <caption  font="adding:2" pos="0,0,-0,32dp" colorBkgnd="#0694F3" show="1">
                    <caption gravity="center" layout="hbox" height="32dp" >
                        <icon src="ICON_LOGO:16" margin="8dp,0,2dp,0"/>
                        <text valign="middle" colorText="#ffffff">@string/title</text>
                    </caption>
                    <imgbtn animate="1" name="btn_close" pos="-32dp,1dp" skin="_skin.btn.close" tip="close" cursor="hand"/>
                    <imgbtn animate="1" name="btn_max" pos="-64dp,1dp" skin="_skin.btn.max" cursor="hand"/>
                    <imgbtn animate="1" name="btn_restore" pos="-64dp,1dp" show="0" skin="_skin.btn.restore" cursor="hand"/>
                    <imgbtn animate="1" name="btn_min" pos="-96dp,1dp" skin="_skin.btn.min" cursor="hand"/>
                    <imgbtn animate="1" name="btn_set" pos="-128dp,1dp" skin="_skin.btn.set" cursor="hand"/>
                    <imgbtn animate="1" name="btn_msg" pos="-160dp,1dp" show="1" skin="_skin.btn.msg" cursor="hand"/>
                </caption>
                <caption pos="0dp,[0dp,-0,-45dp" colorBkgnd="#ffffff"  margin="1dp,0dp">
                    <tabctrl name="tab_main" pos="0,0,-0,-0" tabHeight="0">
                        <page title="page_home">
                            <include src="LAYOUT:page_home"/>
                        </page>
                        <page title="page_login">
                            <include src="LAYOUT:page_login"/>
                        </page>
                        <page title="page_detail">
                            <include src="LAYOUT:page_detail"/>
                        </page>
                        <page title="page_config">
                            <include src="LAYOUT:page_option"/>
                        </page>
                        <page title="page_option">

                        </page>
                    </tabctrl>
                </caption>
                <caption pos="0,-45dp,-0,-0" colorBkgnd="#ffffff" margin="1dp,0dp,1dp,1dp">
                    <imgbtn animate="1" skin="btn_bottom" name="btn_home" pos="0,0,%25,-0" mouseRelay="1" text="home" enable="0" cursor="hand"/>
                    <imgbtn animate="1" skin="btn_bottom" name="btn_login" pos="%25,0,%50,-0" mouseRelay="1" text="login" cursor="hand"/>
                    <imgbtn animate="1" skin="btn_bottom" name="btn_detail" pos="%50,0,%75,-0" mouseRelay="1" text="detail" cursor="hand"/>
                    <imgbtn animate="1" skin="btn_bottom" name="btn_option" pos="%75,0,-0,-0" mouseRelay="1" text="option" cursor="hand"/>
                </caption>
            </caption>
        </window>
        <Turn3dView name="turn3d" pos="0,0,-0,-0"/>
    </root>
</SOUI>

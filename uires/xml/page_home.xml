<?xml version="1.0"?>
<include>
    <window pos="0,0,-0,-0">
        <treeview pos="0,0,-0,-0" name="tv_home" indent="0" sbSkin="skin_scrollbar" sbWid="8dp">
            <template>
                <item_group focusable="0" layout="vbox" size="-2, 24dp" colorSelected="#ffffff" colorHover="#ffffff">
                    <hr name="hr" size="-2, 1dp" margin="0,0,0,0" colorLine="#c9c7c6" show="0" />
                    <window size="-2, -1" gravity="center" layout="hbox" colorBkgnd="#cdcccc">
                        <img extend_left="4dp" name="img_expand" skin="skin_folder" iconIndex="1"/>
                        <text extend_left="4dp" extend_right="12dp" size="-2, 23dp" valign="middle" name="txt_name" dotted="1"/>
                    </window>
                </item_group>
                <item_data size="-2,68dp" layout="vbox"  colorSelected="#ffffff" colorHover="#ffffff">
                    <window size="-2, -1" gravity="center" layout="hbox">
                        <window height="50dp">
                            <img extend_left="4dp" size="48dp,48dp" name="img_icon" skin="skin_list_icons" iconIndex="0" />
                            <gifplayer pos="[-25dp, [-25dp" size="25dp,25dp" name="gif_state" skin="skin_connecting" show="0"/>
                            <img pos="[-25dp, [-25dp" size="25dp,25dp" name="img_state" skin="skin_disconnected"/>
                        </window>
                        <window size="-2, -1" extend_left="4dp" extend_right="52dp">
                            <text pos="0,1dp"  size="150dp, 15dp" name="txt_name" dotted="1" font="bold:1"/>
                            <text pos="[4dp,{0,-4dp,[0" name="txt_time" align="right"/>
                            <text pos="0,[5dp" size="-1, 15dp" name="txt_ipaddr" dotted="1"/>
                            <text pos="[4dp,{0,-4dp,[0" name="txt_speed" align="right"/>
                        </window>
                    </window>
                    <window size="-2, 17dp">
                        <button pos="-0dp, 0, 0, @15dp" visible="0"/>
                        <button pos="{-31dp, 0, @30dp, @-1" skin="btn_send" mouseRelay="1" text="状态" colorText="#70aeff" display="0" name="btn_status" />
                        <button pos="{-31dp, 0, @30dp, @-1" skin="btn_send" mouseRelay="1" text="日志" colorText="#70aeff" display="0" name="btn_logview" />
                        <button pos="{-31dp, 0, @30dp, @-1" skin="btn_send" mouseRelay="1" text="选项" colorText="#70aeff" display="0" name="btn_option" />
                        <button pos="{-31dp, 0, @30dp, @-1" skin="btn_send" mouseRelay="1" text="断开" colorText="#cc0000" display="0" name="btn_disconn" />
                        <button pos="{-31dp, 0, @30dp, @-1" skin="btn_send" mouseRelay="1" text="连接" colorText="#02ce01" display="0" name="btn_conn" />
                        <button pos="{-31dp, 0, @30dp, @-1" skin="btn_send" mouseRelay="1" text="重连" colorText="#d4a954" display="0" name="btn_reconn" />
                    </window>
                    <hr name="hr" size="-2, 1dp" lineSize="1dp" colorLine="#0694F3" lineStyle="dash" clipClient="1" />
                </item_data>
            </template>
        </treeview>
    </window>
</include>

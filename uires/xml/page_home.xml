<?xml version="1.0"?>
<include>
  <!--login page-->
  <caption pos="0,0,-0,-0">
    <caption pos="0,0,-0,32">
      <!--title bar-->
      <icon pos="10,8" src="ICON_LOGO:16"/>
      <text font="face:微软雅黑,size:14" colorText="#000000" pos="32,1" height="32" valign="middle">@string/title</text>
      <imgbtn name="btn_close" skin="_skin.sys.btn.close" pos="-40,1" tip="close" animate="1"/>
      <imgbtn name="btn_min" skin="_skin.sys.btn.minimize" pos="-75,1" animate="1" />
      <imgbtn name="btn_set" skin="_skin.menu" pos="-105,1" animate="1" />
    </caption>
    <caption pos="0,30,-0,-45">
        <treeview pos="0,0,-0,-0"
              name="tv_config"
              indent="0"
              sbSkin="skin_vscroll"
              sbWid="8">
          <template>
              <item_group focusable="0" layout="vbox" colorSelected="#00000000" size="360,36" margin="0,0,0,1" colorBorder="@color/color_line">
                  <hr name="hr" height="1" width="-2" colorLine="#c9c7c6"/>
                  <text extend_left="12" weight="1" size="-2,0" align="bottom" name="name" text=""/>
              </item_group>
              <item_data size="360,60" layout="hbox" gravity="center" colorHover="#dddbda" colorSelected="#c9c7c6">
                  <img extend_left="12" name="state" skin="skin_personal"/>
                  <text extend_left="12" name="name" text=""/>
              </item_data>
          </template>
        </treeview>
    </caption>
  </caption>
  <caption pos="1,-45,-0,-0">
    <imgbtn name="btn_home1" skin="btn_home1" pos="0,0" mouseRelay="1"/>
    <imgbtn name="btn_setting1" skin="btn_setting1" pos="176,0,-1,-1" mouseRelay="1"/>
  </caption>
</include>
